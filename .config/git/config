[add.interactive]
	useBuiltin = yes

[alias]
	a = add --verbose
	ae = a --edit
	ai = a --interactive
	ap = a --patch
	au = a --update

	a3 = apply --3way
	arej = apply --reject

	b = branch --ignore-case --format '%(if)%(HEAD)%(then)%(color:bold red)%(end)%(align:50)%(refname:short)%(color:bold normal)%(push:trackshort)%(end)%(color:dim white) %(color:reset)%(contents:subject) %(color:bold blue)%(authorname)%(color:reset) %(color:nobold dim white)%(push:short)'
	br = b -r

	c = commit --allow-empty --verbose
	cf = c --fixup
	cs = c --sign-off
	cN = c --no-verify
	ca = c --amend --reset-author
	cc = "!f() { exec git c --edit --file .git/COMMIT_EDITMSG \"$@\"; }; f"
	ccrb = "!f() { exec git c --edit --file .git/rebase-merge/message \"$@\"; }; f"

	co = checkout
	co- = co @{-1}
	co-- = co @{-2}
	cop = co --patch
	cob = co -b
	com = co master

	# Hehe.
	cp = cherry-pick

	d = diff --stat --patch
	ds = d --staged

	sl = stash list --stat
	slp = sl -p
	st = stash push
	sp = stash pop

	log-formatted = log --no-merges --date-order --pretty=format:'%C(yellow)%h%C(bold red)%d%C(reset)%C(reset) %s %C(dim white)(%cr)%C(reset) %C(bold blue)%aN%C(reset)'
	l = log-formatted --graph
	lu = l @{upstream}
	lud = l @...@{upstream}
	ld = "!f() { exec git log \"$1@{1}..$1@{0}\"; }; f"
	log-vim = l
	la = l --all --full-history
	ll = log --date=relative --graph --pretty=format:'%C(yellow)%h%C(magenta)%G?%C(bold red)%d%C(reset)%C(reset) %C(dim white)%cs%C(reset) %s %C(bold blue)%aN %C(reset)%C(blue)<%ae>%C(reset)%n%n%-b'
	lp = ll --patch --stat
	lf = log --follow --patch

	m = merge
	mc = m --continue

	mt = mergetool

	rb = rebase
	rbb = rb -s recursive -X diff-algorithm=minimal,ignore-all-space
	ri = rb --interactive
	riu = ri @{upstream}
	rip = ri @{push}
	riom = ri origin/master
	re = rb --edit-todo
	rc = rb --continue
	rs = rb --show-current-patch
	ra = !git diff --name-only --diff-filter=U -z | xargs -0r grep -LZ '<<<<<<<' | xargs -0r git add -v

	rp = reset --patch

	s = status --ahead-behind --show-stash --branch
	ss = status --short --branch

	f = fetch

	push-origin = push -u origin HEAD

	wt = worktree

	whoami = var GIT_COMMITTER_IDENT

	serve = !git daemon --port=10000 --base-path=. --export-all --reuseaddr --informative-errors --verbose
	hub = !git daemon --port=10000 --base-path=. --export-all --enable=receive-pack --reuseaddr --informative-errors --verbose

[am]
	threeWay = yes

[difftool]
	prompt = no
	trustExitCode = yes

[grep]
	lineNumber = yes

[init]
	templateDir = ~/.config/git/template
	defaultBranch = master

[include]
	path = config.user
	path = config.credential

[interactive]
	singleKey = yes

[merge]
	tool = nvimdiff
	conflictStyle = diff3

[mergetool "nvimdiffx"]
	keepBackup = no
	trustExitCode = yes
	cmd = nvim -d "$MERGED" "$BASE" "$LOCAL" "$REMOTE" +"wincmd J"

[fetch]
	prune = yes

[pull]
	rebase = yes

[rebase]
	missingCommitsCheck = error
	instructionFormat = "%s (%ar) %an"
	autoSquash = yes

	stat = yes

[sendemail]
	smtpEncryption = tls
	annotate = yes
	assume8bitEncoding = yes
	xmailer = no

[instaweb]
	httpd = webrick
	browser = echo

[browser "echo"]
	cmd = echo
