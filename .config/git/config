[am]
	threeWay = true
[init]
	templatedir = ~/.config/git/template
	defaultBranch = master
[include]
	path = config.user
	path = config.credential
[alias]
	fp = format-patch -o patches
	b = branch
	ca = commit --amend --reset-author
	c = commit --signoff --verbose
	ce = commit -s --edit
	co = checkout
	cob = co --branch
	d = diff
	da = apply
	ds = diff --staged
	dw = diff --word-diff
	df = diff --stat
	mt = mergetool
	ri = rebase --interactive --autosquash
	s = status
	l  = log --date-order --date=relative --graph --full-history --all --pretty=format:'%C(yellow)%h%C(magenta)%G? %C(reset)%>(12)%cr %C(bold blue)%aN <%ae>%C(reset)%C(bold red)%d %C(reset)%s'
	ls = l --stat
	lo = log --oneline --graph
	los = lo --stat
	lp = ls -p
[merge]
	tool = nvimdiff
[mergetool "nvimdiff"]
	cmd = nvim -f -c \"Gdiff\" \"$MERGED\"
[pull]
	rebase = false
