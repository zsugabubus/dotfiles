; git rebase --show-current-patch, or its equivalent git show REBASE_HEAD
[add.interactive]
	useBuiltin = yes

[alias]
	a = add
	ae = a --edit
	ai = a --interactive
	ap = a --patch
	au = a --update

	a3 = apply --3way
	arej = apply --reject

	b = branch --ignore-case --format '%(if)%(HEAD)%(then)%(color:bold red)%(end)%(align:50)%(refname:short)%(color:bold normal)%(push:trackshort)%(end)%(color:dim white) %(color:reset)%(contents:subject) %(color:bold blue)%(authorname)%(color:reset) %(color:nobold dim white)%(push:short)'
	br = b -r

	c = commit --verbose
	cs = c --sign-off
	cE = c --allow-empty
	cN = cE --no-verify
	ca = cE --amend --reset-author
	cc = commit --verbose --edit -F .git/COMMIT_EDITMSG

	co = checkout
	co- = co @{-1}
	cop = co --patch
	cob = co -b

	# Hehe.
	cp = cherry-pick

	d = diff
	ds = diff --staged
	di = d .

	sh = show

	sl = stash list
	sp = sl -p

	l = log --date-order --graph --pretty=format:'%C(yellow)%h%C(bold red)%d%C(reset)%C(reset) %s %C(dim white)(%cr)%C(reset) %C(bold blue)%aN%C(reset)'
	log-vim = l
	la = l --all --full-history
	rl = l --reverse
	ll = log --date=relative --graph --pretty=format:'%C(yellow)%h%C(magenta)%G?%C(bold red)%d%C(reset)%C(reset) %C(dim white)%cs%C(reset) %s %C(bold blue)%aN %C(reset)%C(blue)<%ae>%C(reset)%n%n%-b'
	lp = ll --patch
	lm = l --no-merges
	ls = l --stat
	lmp = lm --patch

	m = merge
	mc = m --continue

	mt = mergetool

	rb = rebase
	re = rb --edit-todo
	ri = rb --interactive
	rim = ri master
	riom = ri origin/master
	rbm = rb master
	rbom = rb origin/master
	rc = rb --continue

	pl = pull

	rp = reset --patch

	s = status --ahead-behind --show-stash
	ss = status -s

	p = push
	pu = push -u origin HEAD

	rs = remote show
	rso = rs origin

	wt = worktree

[am]
	threeWay = yes

[difftool]
	prompt = no
	trustExitCode = yes

[grep]
	lineNumber = yes

[init]
	templatedir = ~/.config/git/template
	defaultBranch = master

[include]
	path = config.user
	path = config.credential

[interactive]
	singleKey = yes

[merge]
	tool = nvimdiff
	conflictstyle = "diff3"

[mergetool "nvimdiffx"]
	keepBackup = no
	trustExitCode = yes
	cmd = nvim -d "$MERGED" "$BASE" "$LOCAL" "$REMOTE" +"wincmd J"

[rebase]
	missingCommitsCheck = error
	instructionFormat = "%s (%an)"
	autosquash = true

[pull]
	rebase = true
