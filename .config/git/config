; git rebase --show-current-patch, or its equivalent git show REBASE_HEAD
[add.interactive]
	useBuiltin = yes

[alias]
	a = add
	ae = a --edit
	ai = a --interactive
	ap = a --patch
	au = a --update

	a3 = apply --3way
	arej = apply --reject

	b = branch --ignore-case --format '%(if)%(HEAD)%(then)%(color:bold red)%(end)%(align:50)%(refname:short)%(color:bold normal)%(push:trackshort)%(end)%(color:dim white) %(color:reset)%(contents:subject) %(color:bold blue)%(authorname)%(color:reset) %(color:nobold dim white)%(push:short)'
	br = b -r

	c = commit --allow-empty --verbose
	cf = c --fixup
	cs = c --sign-off
	cN = c --no-verify
	ca = c --amend --reset-author
	cc = c --edit -F .git/COMMIT_EDITMSG

	co = checkout
	co- = co @{-1}
	co-- = co @{-2}
	cop = co --patch
	cob = co -b
	com = co master

	# Hehe.
	cp = cherry-pick

	d = diff
	ds = diff --staged
	dss = ds --stat

	sl = stash list
	slp = sl -p
	st = stash push
	sp = stash pop
	ss = sp

	log-formatted = log --date-order --pretty=format:'%C(yellow)%h%C(bold red)%d%C(reset)%C(reset) %s %C(dim white)(%cr)%C(reset) %C(bold blue)%aN%C(reset)'
	l = log-formatted --graph
	lg = l --grep
	log-vim = l
	la = l --all --full-history
	ll = log --date=relative --graph --pretty=format:'%C(yellow)%h%C(magenta)%G?%C(bold red)%d%C(reset)%C(reset) %C(dim white)%cs%C(reset) %s %C(bold blue)%aN %C(reset)%C(blue)<%ae>%C(reset)%n%n%-b'
	lp = ll --patch
	ls = l --stat
	lf = log --follow --patch

	m = merge
	mc = m --continue

	mt = mergetool

	rb = rebase
	rbb = rb -s recursive -X diff-algorithm=minimal,ignore-all-space

	re = rb --edit-todo
	ri = rb --interactive
	rim = ri master
	riom = ri origin/master
	rbm = rb master
	rbom = rb origin/master
	rc = rb --continue

	rp = reset --patch

	s = status --ahead-behind --show-stash
	su = status --short
	ss = su --untracked-files=no
	sun = s --untracked-files=no

	f = fetch

	p = pull

	push-origin = push -u origin HEAD

	rl = reflog

	rs = remote show
	rso = rs origin

	wt = worktree

[am]
	threeWay = yes

[difftool]
	prompt = no
	trustExitCode = yes

[grep]
	lineNumber = yes

[init]
	templatedir = ~/.config/git/template
	defaultBranch = master

[include]
	path = config.user
	path = config.credential

[interactive]
	singleKey = yes

[merge]
	tool = nvimdiff
	conflictstyle = "diff3"

[mergetool "nvimdiffx"]
	keepBackup = no
	trustExitCode = yes
	cmd = nvim -d "$MERGED" "$BASE" "$LOCAL" "$REMOTE" +"wincmd J"

[fetch]
	prune = yes

[pull]
	rebase = yes

[rebase]
	missingCommitsCheck = error
	instructionFormat = "%s (%an)"
	autosquash = yes

[sendemail]
	smtpEncryption = tls
	annotate = yes
	assume8bitEncoding = yes
	xmailer = no
