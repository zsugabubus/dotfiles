#autoload

emulate -L zsh
setopt extended_glob

zmodload zsh/attr

local files
while :; do
	if [[ $LBUFFER =~ '\S$' ]]; then
		local dir=${~${(zA)LBUFFER}[-1]}
	else
		local dir=
	fi

	files=( ${${(f)"$(
		[[ -z $dir ]] || cd -q -- $dir
		# exec 2>/dev/null does not work. Why?
		rg --files -0 2>/dev/null |
		xargs -0r ls -UbNd --color -- 2>/dev/null |
		fzf -d $'\xa0' --height=50% --ansi --multi --bind alt-enter:select-all+accept-non-empty --bind enter:accept-non-empty --bind ')':jump-accept
	)"}//#?[Â ]#/} ) && (( $#files )) || break

	if [[ ! zle || -z $BUFFER ]]; then
		autoload -Uz open
		open $files
		break
	else
		if [[ -n $dir && ! $LBUFFER =~ /$ ]]; then
			LBUFFER+='/'
		elif [[ -z $dir && $LBUFFER =~ \\S$ ]]; then
			LBUFFER+=' '
		fi
		LBUFFER+=${(q-@)files}
		if [[ $#files == 1 && -d $dir/$files[1] ]]; then
			LBUFFER+=/
		else
			LBUFFER+=' '
			break
		fi
	fi
done

zle reset-prompt
_zsh_autosuggest_clear
